{
  "name": "sample",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon -L",
    "dev:container": "docker compose exec backend bash",
    "dev:c": "npm run dev:container",
    "test": "vitest run",
    "t": "vitest --coverage=false --reporter=default",
    "prettier": "prettier --check './src/**/*.(js|jsx|ts|tsx|json|css|scss|md)'",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "docker": "npm i && npm run dev",
    "cli": "node src/cli",
    "prepare": "husky install",
    "openApi": "node src/cli getopenapijson --output='src/public/openApi.json'"
  },
  "nodemonConfig": {
    "ignore": [
      "src/locales/**/*.json",
      "src/**/*.test.js"
    ],
    "delay": "120ms",
    "exec": "fuser -k 9229/tcp; node --inspect=0.0.0.0 ./src/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com:adaptivestone/example-project.git"
  },
  "author": {
    "name": "Adaptivestone team",
    "email": "info@adaptivestone.com",
    "url": "https://adaptivestone.com"
  },
  "license": "ISC",
  "dependencies": {
    "@adaptivestone/framework": "^4.0.0",
    "@sentry/node": "^7.30.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^0.34.3",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vitest": "^0.3.1",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "mongodb-memory-server": "^8.5.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "vitest": "^0.34.3"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,json,scss}": "prettier --write"
  }
}
