{
  "name": "sample",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon -L",
    "test": "jest --passWithNoTests --coverage=true",
    "test:watch": "jest --passWithNoTests --coverage=true --watch",
    "codestyle": "prettier --check './src/**/*.(js|jsx|ts|tsx|json|css|scss|md)'",
    "docker": "npm i && npm run dev",
    "cli": "node src/cli",
    "prepare": "husky install",
    "openApi": "node src/cli getopenapijson --output='src/public/openApi.json'"
  },
  "nodemonConfig": {
    "ignore": [
      "src/locales/**/*.json",
      "src/**/*.test.js"
    ],
    "delay": "120ms",
    "exec": "fuser -k 9229/tcp; node --inspect=0.0.0.0 ./src/server.js"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./src/tests/setup.js"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "text-summary"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com:adaptivestone/example-project.git"
  },
  "author": {
    "name": "Adaptivestone team",
    "email": "info@adaptivestone.com",
    "url": "https://adaptivestone.com"
  },
  "license": "ISC",
  "dependencies": {
    "@adaptivestone/framework": "^3.0.16",
    "@sentry/node": "^7.30.0",
    "@sentry/tracing": "^7.30.0"
  },
  "devDependencies": {
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^13.0.0",
    "mongodb-memory-server": "^8.5.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,json,scss}": "prettier --write"
  }
}
