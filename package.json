{
  "name": "sample",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon -L",
    "dev:container": "docker compose exec backend bash",
    "dev:c": "npm run dev:container",
    "dev:l": "docker compose logs backend -f",
    "test": "vitest run",
    "t": "vitest --coverage=false --reporter=default",
    "prettier": "prettier --check './src/**/*.(js|jsx|ts|tsx|json|css|scss|md)'",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "docker": "npm i && npm run dev",
    "cli": "node src/cli",
    "prepare": "husky",
    "openApi": "node src/cli getopenapijson --output='src/public/openApi.json'",
    "docker:build": "docker buildx build --platform linux/amd64,linux/arm64 -t registry.gitlab.com/adaptivestone/example-project:latest . --push"
  },
  "nodemonConfig": {
    "ignore": [
      "src/locales/**/*.json",
      "src/**/*.test.js"
    ],
    "delay": "120ms",
    "exec": "fuser -k 9229/tcp; node --inspect=0.0.0.0 ./src/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com:adaptivestone/example-project.git"
  },
  "author": {
    "name": "Adaptivestone team",
    "email": "info@adaptivestone.com",
    "url": "https://adaptivestone.com"
  },
  "license": "ISC",
  "dependencies": {
    "@adaptivestone/framework": "^5.0.0-alpha.8",
    "@adaptivestone/framework-module-email": "^1.0.1",
    "@sentry/node": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/eslint-plugin": "^1.1.25",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-prettier": "^5.0.0",
    "globals": "^15.14.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "mongodb-memory-server": "^10.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "vitest": "^3.0.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,json,scss}": "prettier --write"
  }
}
