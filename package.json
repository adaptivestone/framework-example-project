{
  "name": "sample",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon --L",
    "test": "jest --passWithNoTests",
    "codestyle": "prettier --check './src/**/*.(js|jsx|ts|tsx|json|css|scss|md)'",
    "docker": "npm i && npm run dev",
    "cli": "node src/cli",
    "prepare": "husky install"
  },
  "nodemonConfig": {
    "ignore": [
      "src/locales/**/*.json"
    ],
    "delay": "120ms",
    "exec": "fuser -k 9229/tcp; node --inspect=0.0.0.0 ./src/server.js"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./src/tests/setup.js"
    ],
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com:adaptivestone/example-project.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@adaptivestone/framework": "^3.0.16",
    "@sentry/node": "^6.19.7",
    "@sentry/tracing": "^6.19.7"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "husky": "^7.0.4",
    "jest": "^28.0.3",
    "lint-staged": "^12.4.1",
    "mongodb-memory-server": "^8.5.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,json,scss}": "prettier --write"
  }
}
